@article{Dorts_Evidencethatelevated_2012,
  title = {Evidence That Elevated Water Temperature Affects the Reproductive Physiology of the {{European}} Bullhead {{Cottus}} Gobio},
  author = {Dorts, Jennifer and Grenouillet, Ga{\"e}l and Douxfils, Jessica and Mandiki, Syaghalirwa N. M. and Milla, Sylvain and Silvestre, Fr{\'e}d{\'e}ric and Kestemont, Patrick},
  year = {2012},
  month = apr,
  journal = {Fish Physiology and Biochemistry},
  volume = {38},
  number = {2},
  pages = {389--399},
  issn = {0920-1742, 1573-5168},
  doi = {10.1007/s10695-011-9515-y},
  abstract = {Climate change is predicted to increase the average water temperature and alter the ecology and physiology of several organisms including fish species. To examine the effects of increased water temperature on freshwater fish reproduction, adult European bullhead Cottus gobio of both genders were maintained under three temperature regimes (T1: 6\textendash 10, T2: 10\textendash 14 and T3: 14\textendash 18\textdegree C) and assessed for gonad development (gonadosomatic index\textemdash GSI and gonad histology), sex steroids (testosterone\textemdash T, 17{$\beta$}-estradiol\textemdash E2 and 11-ketotestosterone\textemdash 11-KT) and vitellogenin (alkali-labile phosphoprotein phosphorus\textemdash ALP) dynamics in December, January, February and March. The results indicate that a 8\textdegree C rise in water temperature (T3) deeply disrupted the gonadal maturation in both genders. This observation was associated with the absence of GSI peak from January to March, and low levels of plasma sex steroids compared with T1-exposed fish. Nevertheless, exposure to an increasing temperature of 4\textdegree C (T2) appeared to accelerate oogenesis with an early peak value in GSI and level of plasma T recorded in January relative to T1-exposed females. In males, the low GSI, reduced level of plasma 11-KT and the absence of GSI increase from January to March support the deleterious effects of increasing water temperature on spermatogenesis. The findings of the present study suggest that exposure to elevated temperatures within the context of climate warming might affect the reproductive success of C. gobio. Specifically, a 4\textdegree C rise in water temperature affects gametogenesis by advancing the spawning, and a complete reproductive failure is observed at an elevated temperature of 8\textdegree C.},
  langid = {english},
  keywords = {Cottidae,impact,physiologie,poissons,reproduction,thermie}
}


